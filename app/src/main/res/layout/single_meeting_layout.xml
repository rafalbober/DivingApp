<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_cardView"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_wrapper"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="357dp"
            android:layout_height="213dp"
            android:layout_alignTop="@+id/iv_view_users_list"
            android:layout_alignBottom="@+id/iv_view_users_list"
            android:layout_toEndOf="@+id/iv_view_users_list"
            android:layout_toRightOf="@+id/iv_view_users_list"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_meeting_list"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="ImiÄ™ Nazwisko"
                android:textColor="@android:color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_datetime_meeting_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="00:00:0000, 00:00"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_description_meeting_list"
                android:layout_width="337dp"
                android:layout_height="119dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="Opis"
                android:textColor="@android:color/darker_gray"
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>